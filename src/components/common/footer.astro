---
import { Code2, Github, Twitter, Linkedin } from "lucide-react";
---

    <footer class="border-t border-gray-200 dark:border-white/10 bg-white dark:bg-black/20 py-12 text-sm">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-10">
          <!-- Brand Section -->
          <div>
            <div class="flex items-center space-x-2 mb-4">
              <div class="w-8 h-8 bg-gradient-to-r from-emerald-500 to-cyan-500 rounded-lg flex items-center justify-center">
                <Code2 class:list="w-5 h-5 text-white" />
              </div>
              <span class="text-xl font-bold text-gray-900 dark:text-white">FrontendPro</span>
            </div>
            <p class="text-gray-600 dark:text-gray-400">
              Empowering developers to build the future of web experiences.
            </p>
          </div>

          <!-- Navigation -->
          <div>
            <h3 class="font-semibold text-gray-800 dark:text-white mb-3">Product</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
              <li><a href="/features" class="hover:text-emerald-500 transition-colors">Features</a></li>
              <li><a href="/pricing" class="hover:text-emerald-500 transition-colors">Pricing</a></li>
              <li><a href="/docs" class="hover:text-emerald-500 transition-colors">Documentation</a></li>
              <li><a href="/roadmap" class="hover:text-emerald-500 transition-colors">Roadmap</a></li>
            </ul>
          </div>

          <!-- Company -->
          <div>
            <h3 class="font-semibold text-gray-800 dark:text-white mb-3">Company</h3>
            <ul class="space-y-2 text-gray-600 dark:text-gray-400">
              <li><a href="/about" class="hover:text-emerald-500 transition-colors">About Us</a></li>
              <li><a href="/blog" class="hover:text-emerald-500 transition-colors">Blog</a></li>
              <li><a href="/careers" class="hover:text-emerald-500 transition-colors">Careers</a></li>
              <li><a href="/contact" class="hover:text-emerald-500 transition-colors">Contact</a></li>
            </ul>
          </div>

          <!-- Social / Newsletter -->
          <div>
            <h3 class="font-semibold text-gray-800 dark:text-white mb-3">Connect</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">Follow us on social platforms for updates.</p>
            <div class="flex items-center space-x-4">
                <a
                    class="github-button"
                    href="https://github.com/alireza-akbarzadeh/frontend-handbooks"
                    data-icon="octicon-star"
                    data-size="large"
                    data-show-count="true"
                    aria-label="Star OWNER/REPO on GitHub"
                >
                  Star
                </a>
                <script async defer src="https://buttons.github.io/buttons.js"></script>
              <a href="https://twitter.com" aria-label="Twitter" class="text-gray-500 hover:text-emerald-500">
                <Twitter class:list="w-5 h-5" />
              </a>
              <a href="https://linkedin.com" aria-label="LinkedIn" class="text-gray-500 hover:text-emerald-500">
                <Linkedin class:list="w-5 h-5" />
              </a>
            </div>
          </div>
        </div>

        <!-- Bottom Legal -->
        <div class="border-t border-gray-200 dark:border-white/10 mt-10 pt-6 text-center text-gray-500 dark:text-gray-400">
          <p>&copy; 2024 FrontendPro. All rights reserved.</p>
          <div class="mt-2 space-x-4">
            <a href="/privacy" class="hover:text-emerald-500">Privacy</a>
            <a href="/terms" class="hover:text-emerald-500">Terms</a>
          </div>
        </div>
      </div>
    </footer>
