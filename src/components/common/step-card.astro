---
export interface Props {
  step: number;
  title: string;
  description: string;
  icon: 'code' | 'mouse' | 'accessibility' | 'book' | 'eye';
}

const { step, title, description, icon } = Astro.props;

const iconSvgs = {
  code: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />`,
  mouse: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />`,
  accessibility: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />`,
  book: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />`,
  eye: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />`,
};
---

<div
  class="group relative overflow-hidden rounded-2xl border border-l-4 border-l-blue-500 bg-white/80 dark:bg-black/5 p-6 backdrop-blur-3xl hover:shadow-lg transition-all duration-300 hover:scale-[1.02]"
>
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0">
      <div
        class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center"
      >
        <span class="text-blue-600 dark:text-blue-400 font-bold text-lg"
          >{step}</span
        >
      </div>
    </div>
    <div class="flex-1">
      <h3 class="text-xl font-semibold mb-2 flex items-center gap-2">
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <Fragment set:html={iconSvgs[icon]} />
        </svg>
        {title}
      </h3>
      <p class="text-slate-600 dark:text-slate-300">{description}</p>
    </div>
    <svg
      class="w-6 h-6 text-green-500 flex-shrink-0"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
  </div>
</div>
