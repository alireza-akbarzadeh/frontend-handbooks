---
import Default from '@/layouts/default.astro';
import { AlertTriangle } from 'lucide-react';
---

<Default>
  <div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 px-4"
  >
    <div
      class="relative bg-white/10 backdrop-blur-xl border border-white/20 shadow-2xl rounded-3xl p-10 max-w-sm w-full text-center text-white"
    >
      <!-- Decorative glowing ring -->
      <div
        class="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-emerald-400/20 blur-2xl h-40 w-40 rounded-full z-0"
      >
      </div>

      <div class="relative z-10">
        <div class="flex justify-center mb-6">
          <div class="bg-white/20 p-4 rounded-full shadow-lg">
            <AlertTriangle className="text-white w-12 h-12 animate-pulse" />
          </div>
        </div>
        <h1 class="text-5xl font-bold mb-2 tracking-tight">404</h1>
        <p class="text-white/80 text-lg mb-6">
          Sorry, we couldn’t find the page you’re looking for.
        </p>
        <a
          href="/"
          class="inline-block bg-emerald-500 text-white font-semibold px-6 py-3 rounded-lg hover:bg-emerald-600 transition duration-200 shadow-md"
        >
          ← Go Back Home
        </a>
      </div>
    </div>
  </div>
</Default>
